<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >

            <TextView
                style="@style/infoHeader"
                android:text="@string/time_in_state"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ui_states_view"
                android:paddingBottom="10dp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:background="#551111"
                android:text="@string/ui_states_warning"
                android:visibility="gone"
                android:id="@+id/ui_states_warning"
                />


            <TextView
                android:id="@+id/ui_header_additional_states"
                style="@style/infoHeader"
                android:visibility="gone"
                android:text="@string/ui_header_additional_states"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/ui_additional_states"
                android:padding="6dp"
                />

            <TextView
                android:id="@+id/ui_header_total_state_time"
                style="@style/infoHeader"
                android:text="@string/ui_header_total_state_time"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="#dddddd"
                android:padding="7dp"
                android:id="@+id/ui_total_state_time"
                android:gravity="center_horizontal"
                />

            <TextView
                style="@style/infoHeader"
                android:text="@string/kernel_cpuspy"
                />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/ui_kernel_string"
                android:textSize="19dp"
                android:textColor="#dddddd"
                android:padding="10dp"
                android:id="@+id/ui_kernel_string"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>

